# ================================
# NEXT.JS / GENERAL
# ================================
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# ================================
# OPENAI (Required)
# ================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ================================
# SUPABASE (Required)
# ================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ================================
# RETELL AI (Optional - for voice calls)
# ================================
RETELL_API_KEY=your-retell-api-key-here
RETELL_AGENT_ID=your-retell-agent-id-here
RETELL_WEBSOCKET_PORT=8080

# ================================
# TWILIO (Optional - for phone calls)
# ================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# WHATSAPP / EVOLUTION API (Optional)
# ================================
EVOLUTION_API_URL=http://localhost:8000
EVOLUTION_API_KEY=your-evolution-api-key

# ================================
# OPENDENTAL API (Optional - if using external OpenDental)
# ================================
OPENDENTAL_API_KEY=your-opendental-api-key
OPENDENTAL_API_URL=https://api.opendental.com

# ================================
# GOOGLE CALENDAR (Optional)
# ================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================
# WEBSOCKET SERVER (For Retell/Twilio)
# ================================
# Local development
NEXTJS_BASE_URL=http://localhost:3000

